generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id               Int            @id @default(autoincrement())
  lotNumber        String         @unique
  description      String
  productLocations Inventory[]
  activityLogs     Log[]  
}

model Warehouse {
  id               Int              @id @default(autoincrement())
  name             String
  inventorySpaces  InventoryBay[]
}

model InventoryBay {
  id               Int              @id @default(autoincrement())
  warehouseId      Int
  maxUniqueLots    Int
  productLocations Inventory[]
  warehouse        Warehouse        @relation(fields: [warehouseId], references: [id])
  activityLogsFrom Log[]    @relation("FromLocation") 
  activityLogsTo   Log[]    @relation("ToLocation")  
}

model Inventory {
  id               Int            @id @default(autoincrement())
  productProfileId Int
  inventorySpaceId Int
  quantity         Int
  createdAt        DateTime       @default(now())
  createdBy        String
  updatedAt        DateTime       @updatedAt
  updatedBy        String

  productProfile   Product @relation(fields: [productProfileId], references: [id])
  inventorySpace   InventoryBay @relation(fields: [inventorySpaceId], references: [id])
}

model Log {
  id               Int            @id @default(autoincrement())
  fromLocationId   Int
  toLocationId     Int
  dateTime         DateTime       @default(now())
  userId           String
  productProfileId Int
  quantityMoved    Int
  comments         String?

  fromLocation     InventoryBay @relation("FromLocation", fields: [fromLocationId], references: [id])
  toLocation       InventoryBay @relation("ToLocation", fields: [toLocationId], references: [id])
  productProfile   Product @relation(fields: [productProfileId], references: [id])
}

