generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id               Int            @id @default(autoincrement())
  name             String         @unique
  description      String
  productLots      ProductLot[]
}

model ProductLot {
  id                Int            @id @default(autoincrement())
  lotNumber         String         @unique
  internalReference String         @unique
  productId         Int
  product           Product        @relation(fields: [productId], references: [id])

  inventoryRecords  Inventory[]
  activityLogs      Log[]  
}

model Warehouse {
  id               Int              @id @default(autoincrement())
  name             String
  inventoryBays    InventoryBay[]
}

model InventoryBay {
  id               Int              @id @default(autoincrement())
  warehouseId      Int
  maxUniqueLots    Int
  warehouse        Warehouse        @relation(fields: [warehouseId], references: [id])

  inventoryRecords Inventory[]      
  activityLogsFrom Log[]            @relation("FromLocation") 
  activityLogsTo   Log[]            @relation("ToLocation")  
}

model Inventory {
  id               Int            @id @default(autoincrement())
  productLotId     Int
  inventoryBayId   Int
  quantity         Int
  createdAt        DateTime       @default(now())
  createdBy        String
  updatedAt        DateTime       @updatedAt
  updatedBy        String

  productLot       ProductLot     @relation(fields: [productLotId], references: [id])
  inventoryBay     InventoryBay   @relation(fields: [inventoryBayId], references: [id])
}

model Log {
  id               Int            @id @default(autoincrement())
  fromLocationId   Int
  toLocationId     Int
  dateTime         DateTime       @default(now())
  userId           String
  productLotId     Int
  quantityMoved    Int
  comments         String?

  fromLocation     InventoryBay @relation("FromLocation", fields: [fromLocationId], references: [id])
  toLocation       InventoryBay @relation("ToLocation", fields: [toLocationId], references: [id])
  productLot       ProductLot   @relation(fields: [productLotId], references: [id])
}

